{
  "manifest_version": 3,
  "name": "Meituan 商家运营插件",
  "description": "抓取美团商家后台关键数据，辅助生成运营策略。",
  "version": "1.0.0",
  "permissions": ["storage", "scripting", "tabs", "activeTab", "debugger", "webRequest","declarativeNetRequest"],
  "host_permissions": [
    "https://*.meituan.com/*",
    "https://xczdkt200.xc.yuntaitec.com/*",
    "https://console.ugiyu.com/*",
    "http://localhost:5173/*"
  ],
  "action": { "default_popup": "index.html" },
  "background": {
    "service_worker": "./src/background/background.ts"
  },
  "options_page" : "src/optionsPage/optionsPage.html",
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css", "*.svg", "icon-128.png", "icon-32.png"],
      "matches": ["*://*/*"]
    }
  ],
  "content_scripts": [
    {
      "js": ["src/content/content.tsx"],
      "matches": ["https://*.meituan.com/*","https://xczdkt200.xc.yuntaitec.com/*",
      "https://console.ugiyu.com/*"],
      "run_at": "document_idle"
    }
  ]
}
